<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskManagement" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonVie">
        <item name="android:background">@drawable/button_vie</item>
    </style>

    <style name="ButtonNonVie">
        <item name="android:background">@drawable/button_nonvie</item>
    </style>

    <style name="ButtonMaladie">
        <item name="android:background">@drawable/button_maladie</item>
    </style>

    <style name="ButtonTrns">
        <item name="android:background">@drawable/button_transport</item>
    </style>

    <style name="Theme.TaskManagement.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonTasks">
        <item name="android:background">@drawable/button_task</item>
    </style>


    <style name="ButtonTeam">
        <item name="android:background">@drawable/button_team</item>
    </style>

    <style name="Theme.TaskManagement.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TaskManagement.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>